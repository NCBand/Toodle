<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:VerticalPanel>
            <g:TextArea ui:field="question" text="Set text"/>
            <g:FileUpload ui:field="question_image"/>
            <g:HorizontalPanel>
                <g:RadioButton name="type" ui:field="text" text="Text"/>
                <g:RadioButton name="type" ui:field="test" text="Test"/>
                <g:RadioButton name="type" ui:field="multi" text="Multitest"/>
            </g:HorizontalPanel>
            <g:VerticalPanel ui:field="answers"/>
            <g:HorizontalPanel>
                <g:Button ui:field="delete" text="Delete task"/>
                <g:Button ui:field="add" text="Add Answer"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>