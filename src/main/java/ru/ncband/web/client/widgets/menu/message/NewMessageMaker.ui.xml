<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:VerticalPanel>
            <g:HorizontalPanel>
                <g:VerticalPanel ui:field="date_field">
                    <g:Label text="Select date for message:"/>
                </g:VerticalPanel>
                <g:VerticalPanel>
                    <g:Label text="Print your message"/>
                    <g:TextArea ui:field="message"/>
                </g:VerticalPanel>
            </g:HorizontalPanel>
            <g:Label ui:field="error"/>
            <g:HorizontalPanel>
                <g:Button ui:field="back" text="Back"/>
                <g:Button ui:field="create" text="Create"/>
            </g:HorizontalPanel>
    </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>