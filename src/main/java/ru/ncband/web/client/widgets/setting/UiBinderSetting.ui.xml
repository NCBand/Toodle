<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="../../../../../../css/registration.css"/>
    <g:HTMLPanel styleName="{style.backview}">
        <div>
            <g:VerticalPanel>
                <g:Label text="Setting" styleName="{style.headerText}"/>
            </g:VerticalPanel>
            <g:VerticalPanel styleName="{style.background}">
                <g:HorizontalPanel>
                    <g:Label text="Change first name:" styleName="{style.blackText}"/>
                    <g:Label ui:field="statusFirstName" styleName="{style.blackText}"/>
                </g:HorizontalPanel>
                <g:TextBox ui:field="firstNameBox" styleName="{style.box}"/>
                <g:HorizontalPanel>
                    <g:Label text="Change second name:" styleName="{style.blackText}"/>
                    <g:Label ui:field="statusSecondName" styleName="{style.blackText}"/>
                </g:HorizontalPanel>
                <g:TextBox ui:field="secondNameBox" styleName="{style.box}"/>
                <g:Label text="Change e-mail:" styleName="{style.blackText}"/>
                <g:TextBox ui:field="email" styleName="{style.box}"/>
                <g:HorizontalPanel>
                    <g:Label text="Change age: " styleName="{style.blackText}"/>
                    <g:Label ui:field="errorAge" styleName="{style.blackText}"/>
                </g:HorizontalPanel>
                <g:TextBox ui:field="ageBox" styleName="{style.box}"/>
                <g:HorizontalPanel>
                    <g:Label text="Current password: " styleName="{style.blackText}"/>
                    <g:Label ui:field="errorCurrentPassword" styleName="{style.blackText}"/>
                </g:HorizontalPanel>
                <g:PasswordTextBox ui:field="passwordCurrentBox" styleName="{style.box}"/>
                <g:HorizontalPanel>
                    <g:Label text="Password: " styleName="{style.blackText}"/>
                    <g:Label ui:field="errorPassword" styleName="{style.blackText}"/>
                </g:HorizontalPanel>
                <g:PasswordTextBox ui:field="passwordBox" styleName="{style.box}"/>
                <g:HorizontalPanel>
                    <g:Label text="Repeat password: " styleName="{style.blackText}"/>
                    <g:Label ui:field="errorRepeatPassword" styleName="{style.blackText}"/>
                </g:HorizontalPanel>
                <g:PasswordTextBox ui:field="passwordRepeatBox" styleName="{style.box}"/>
                <g:HorizontalPanel>
                    <g:Label ui:field="mainError" styleName="{style.blackText}"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Button ui:field="saveButton" text="Save" styleName="{style.loginButton}"/>
                    <g:Button ui:field="backButton" text="Back" styleName="{style.loginButton}"/>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>