<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <div>
            <g:MenuBar ui:field="menu" addStyleNames="templatemo_menu"/>
            <g:HorizontalPanel>
                <g:VerticalPanel ui:field="left" addStyleNames="templatemo_content_wrapper"/>
                <g:VerticalPanel addStyleNames="sidebar">
                    <g:VerticalPanel ui:field="calendar" addStyleNames="news_section">
                        <g:Label ui:field="date_title"/>
                    </g:VerticalPanel>
                    <g:VerticalPanel ui:field="message" addStyleNames="testimonial_section">
                        <g:Label text="Messages:"/>
                    </g:VerticalPanel>
                </g:VerticalPanel>
            </g:HorizontalPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>