<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="style.css"/>
    <g:HTMLPanel>
        <div>
            <g:HorizontalPanel styleName="{style.background}">
                <g:Button ui:field="tasks" text="Tasks" styleName="{style.loginButton}"/>
                <g:Button ui:field="settings" text="Settings" styleName="{style.loginButton}"/>
                <g:Button ui:field="exit" text = "Exit" styleName="{style.loginButton}"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:VerticalPanel ui:field="left"/>
                <g:VerticalPanel ui:field="right"/>
            </g:HorizontalPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>