<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="../../../../../../webapp/css/mainspace.css" />
    <g:HTMLPanel>
        <body>
            <div id="templatemo_wrapper_outer">
                    <div id="temmplatmeo_header">
                        <div id="site_title">
                            <a target="_parent">
                                Toodle<span>Future Web Test's Forms</span>
                            </a>
                        </div>

                        <div id="templatemo_menu">
                            <g:MenuBar ui:field="menu"/>
                        </div>
                    </div>

                        <div id="content">
                            <g:VerticalPanel ui:field="left" styleName="{style.center}"/>
                        </div>

                        <div id="sidebar">
                            <h2 class="news">
                                <g:Label ui:field="date_title"/>
                            </h2>
                            <div class="news_section">
                                <div class="news_box">
                                    <g:VerticalPanel ui:field="calendar"/>
                                </div>
                            </div>

                            <div id="testimonial_section">
                                <h2 class="testimonial">
                                    <g:Label text="Messages:"/>
                                </h2>
                                <div class="testimonial_box">
                                    <g:VerticalPanel ui:field="message"/>
                                </div>
                        </div>
                </div>
            </div>
        </body>
    </g:HTMLPanel>
</ui:UiBinder>