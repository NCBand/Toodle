<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:VerticalPanel>
            <g:HorizontalPanel>
                <g:Label text="Answer:"/>
                <g:CheckBox text="Is correct" ui:field="right"/>
                <g:Button ui:field="delete" text="Delete"/>
                <g:FormPanel ui:field="question_image">
                    <g:FileUpload ui:field="upload"/>
                </g:FormPanel>
            </g:HorizontalPanel>
            <g:TextArea ui:field="text" text="Set Answer"/>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>