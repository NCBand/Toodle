<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="../../../../../../../../../webapp/css/lessonmaker.css"/>
    <g:HTMLPanel>
        <g:VerticalPanel>
            <g:HorizontalPanel>
                <g:Label text="Answer:"/>
                <g:CheckBox text="Is correct" ui:field="right"/>

            </g:HorizontalPanel>

            <g:TextArea ui:field="text" text="Set Answer"/>
            <g:Button ui:field="delete" text="Delete answer"/>
            <g:FormPanel ui:field="question_image">
                <g:FileUpload ui:field="upload"/>
            </g:FormPanel>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>