<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="../../../../../../../webapp/css/lessonmaker.css"/>
    <g:HTMLPanel>
        <g:VerticalPanel styleName="{style.center}">
            <g:VerticalPanel styleName="{style.center}">
                <g:Label text="New Lesson" styleName="{style.center}"/>
                <g:TextBox text="Set name" ui:field="name"/>
            </g:VerticalPanel>
            <g:VerticalPanel ui:field="tasks"/>
            <g:Label ui:field="error" styleName="{style.center}"/>
            <g:HorizontalPanel styleName="{style.center}">
                <g:Button ui:field="back" text="Back"/>
                <g:Button ui:field="add" text="Add task"/>
                <g:Button ui:field="save" text="Save"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>