<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:VerticalPanel>
            <g:Label text="New Lesson"/>
            <g:TextBox text="Set name" ui:field="name"/>
            <g:VerticalPanel ui:field="tasks"/>
            <g:Label ui:field="error"/>
            <g:HorizontalPanel >
                <g:Button ui:field="back" text="Back"/>
                <g:Button ui:field="add" text="Add task"/>
                <g:Button ui:field="save" text="Save"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>