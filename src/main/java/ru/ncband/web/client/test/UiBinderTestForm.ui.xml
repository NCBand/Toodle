<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="style.css"/>
    <!--<stylesheet src="style.css"/>-->
    <g:HTMLPanel>
        <div align="center">
            <g:VerticalPanel>
                <g:Label text="Create question" styleName="{style.headerText}"/>
            </g:VerticalPanel>
            <g:VerticalPanel styleName="{style.background}">
                    <g:Label text="Write name task:" styleName="{style.blackText}"/>
                <g:TextBox ui:field="taskName" styleName="{style.box}"/>
                <g:Label text="Write question:" styleName="{style.blackText}"/>
                <g:TextBox ui:field="question" styleName="{style.box}"/>
                <g:Label text="Correct answer:" styleName="{style.blackText}"/>

                <g:RadioButton ui:field="yes" name="yesNoButton" value="true" enabled="true">Yes</g:RadioButton>
                <g:RadioButton ui:field="no" name="yesNoButton" value="false" enabled="true">No</g:RadioButton>
                <g:Button ui:field="createTask" text="Create task" styleName="{style.loginButton}"/>
            </g:VerticalPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>